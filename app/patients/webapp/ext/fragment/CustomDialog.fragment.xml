<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="CustomDialog"
        title="User Details"
        class="sapUiContentPadding"
        >

        <VBox class="sapUiSmallMargin">
            <Label text="Name" />
            <Input id="nameInput" />

            <Label text="Mobile Number" />
            <Input id="mobileInput" type="Number" />

            <Label text="City" />
            <Input id="cityInput" />
        </VBox>

        <beginButton>
            
            <Button text="Save" type="Emphasized" press="onSaveDialog" />
        </beginButton>

        <endButton>
            <Button text="Cancel" press="onCancelDialog" />
        </endButton>

    </Dialog>

</core:FragmentDefinition>
